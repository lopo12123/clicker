{
    "build": {
        "beforeDevCommand": "yarn dev",
        "beforeBuildCommand": "yarn build",
        "devPath": "http://localhost:1420",
        "distDir": "../dist"
    },
    "package": {
        "productName": "clicker",
        "version": "0.0.0"
    },
    "tauri": {
        "allowlist": {
            "all": true
        },
        "bundle": {
            "active": true,
            "category": "DeveloperTool",
            "copyright": "",
            "deb": {
                "depends": []
            },
            "externalBin": [],
            "icon": [
                "icons/32x32.png",
                "icons/128x128.png",
                "icons/128x128@2x.png",
                "icons/icon.icns",
                "icons/icon.ico"
            ],
            "identifier": "com.tauri.dev",
            "longDescription": "",
            "macOS": {
                "entitlements": null,
                "exceptionDomain": "",
                "frameworks": [],
                "providerShortName": null,
                "signingIdentity": null
            },
            "resources": [],
            "shortDescription": "",
            "targets": "all",
            "windows": {
                "certificateThumbprint": null,
                "digestAlgorithm": "sha256",
                "timestampUrl": ""
            }
        },
        "security": {
            "csp": null
        },
        "updater": {
            "active": false
        },
        "windows": [
            {
                "label": "main",
                "title": "Clicker",
                "focus": true,
                "visible": true,
                "decorations": false,
                "transparent": true,
                "fullscreen": false,
                "width": 800,
                "height": 600,
                "minWidth": 800,
                "minHeight": 600,
                "resizable": true,
                "fileDropEnabled": false
            },
            {
                "label": "keyboard",
                "title": "Keyboard",
                "url": "/keyboard",
                "focus": false,
                "visible": false,
                "decorations": false,
                "transparent": true,
                "fullscreen": false,
                "width": 800,
                "height": 600,
                "minWidth": 800,
                "minHeight": 600,
                "resizable": true,
                "fileDropEnabled": false
            }
        ]
    }
}
